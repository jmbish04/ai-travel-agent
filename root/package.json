{
  "name": "voyant-travel-assistant",
  "version": "1.0.0",
  "description": "AI-powered travel assistant for planning trips with weather, attractions, and packing recommendations",
  "main": "dist/index.js",
  "bin": {
    "voyant": "dist/cli.js"
  },
  "type": "module",
  "keywords": [
    "travel",
    "assistant",
    "ai",
    "weather",
    "attractions",
    "planning"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/voyant-travel-assistant"
  },
  "homepage": "https://github.com/yourusername/voyant-travel-assistant#readme",
  "scripts": {
    "dev": "tsx src/api/server.ts",
    "cli": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.json && cp -r src/prompts dist/ && mkdir -p dist/public && (cp ../docs/index.html dist/public/ || echo 'index.html not found') && (cp ../docs/llmchat.html dist/public/ || echo 'llmchat.html not found')",
    "start": "node dist/api/server.js",
    "start:prod": "NODE_ENV=production node dist/api/server.js",
    "prepublishOnly": "npm run build",
    "test": "jest --runInBand",
    "test:transcripts": "RECORD_TRANSCRIPTS=true jest --runInBand",
    "test:weather": "jest --runInBand --testNamePattern=\"weather|misspelled|abbreviation\"",
    "test:packing": "jest --runInBand --testNamePattern=\"packing\"",
    "ingest-policies": "tsx scripts/vectara-ingest.ts",
    "test-vectara": "tsx scripts/vectara-test.ts",
    "test:attractions": "jest --runInBand --testNamePattern=\"attractions\"",
    "test:context": "jest --runInBand --testNamePattern=\"switch\"",
    "test:multilingual": "jest --runInBand --testNamePattern=\"language|Spanish\"",
    "test:clarification": "jest --runInBand --testNamePattern=\"clarifier|refinement\"",
    "test:e2e:01": "jest --runInBand --testPathPattern=tests/e2e/01-weather_packing.test.ts",
    "test:e2e:02": "jest --runInBand --testPathPattern=tests/e2e/02-attractions_variants.test.ts",
    "test:e2e:03": "jest --runInBand --testPathPattern=tests/e2e/03-intent_family_thread.test.ts",
    "test:e2e:04": "jest --runInBand --testPathPattern=tests/e2e/04-input_variance_cot.test.ts",
    "test:e2e:05": "jest --runInBand --testPathPattern=tests/e2e/05-errors_api_failures.test.ts",
    "test:e2e:06": "jest --runInBand --testPathPattern=tests/e2e/06-citations_unrelated_empty_system.test.ts",
    "test:e2e:07": "jest --runInBand --testPathPattern=tests/e2e/07-conflicting_abrupt_sensitive_multilang_metrics.test.ts",
    "test:e2e:09": "jest --runInBand --testPathPattern=tests/e2e/09-demo_authentic_conversation.test.ts",
    "test:e2e:10": "jest --runInBand --testPathPattern=tests/e2e/10-nlp-pipeline-verify.test.ts",
    "test:e2e:10:transcripts": "RECORD_TRANSCRIPTS=true jest --runInBand --testPathPattern=tests/e2e/10-nlp-pipeline-verify.test.ts",
    "test:e2e:all": "jest --runInBand --testPathPattern=tests/e2e/",
    "test:edge": "jest --runInBand --testNamePattern=\"typos|emojis|thread|leakage|non-existent|long messages\"",
    "generate-deliverables": "npm run test:transcripts",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "overrides": {
    "onnxruntime-web": "1.19.2"
  },
  "dependencies": {
    "@huggingface/transformers": "3.0.0",
    "@types/express": "^4.17.21",
    "@types/langdetect": "^0.2.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.12.12",
    "@xenova/transformers": "^2.17.2",
    "bottleneck": "^2.19.5",
    "brave-search": "^0.9.0",
    "tavily": "^1.0.2",
    "chalk": "^5.6.0",
    "crawlee": "^3.14.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "langdetect": "^0.2.1",
    "markdown-it": "^14.1.0",
    "opossum": "^8.0.0",
    "pino": "^9.0.0",
    "playwright": "^1.55.0",
    "sharp": "^0.34.3",
    "typescript": "^5.5.4",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/chalk": "^0.4.31",
    "@types/jest": "^30.0.0",
    "@types/langdetect": "^0.2.2",
    "@types/nock": "^10.0.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.7"
  }
}
