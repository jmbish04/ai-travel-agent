{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "@cloudflare/workers-types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/scrapers/*": ["src/scrapers/*"],
      "@/core/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
